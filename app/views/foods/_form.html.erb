<div class="row justify-content-md-center ">
  <%= link_to "回首頁", root_path, class:"btn btn-outline-primary" %>
</div>

<div class="row justify-content-md-center">
  <div class="col-4">
    <div class="card mt-5">
      <div class="card-body">
        <%= simple_form_for food do |f| %>
          <%= f.input :name, placeholder: '店家名稱...', label: '名稱' %>

          <%= f.input :location, label: '地址' %>

          <%= f.input :url, label: '網址', placeholder: 'www://...' %>

          <%= f.input :description, as: :text, input_html: { rows:"5" }, label: '描述', placeholder: '介紹必點食物...' %>

          <%= f.submit class:'btn btn-success form-control', value: '送出' %>
        <% end %>
      </div>
    </div>
  </div>
</div>